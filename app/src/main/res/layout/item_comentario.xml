<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="1dp"
    app:cardElevation="0dp"
    app:cardCornerRadius="10dp"
    app:cardUseCompatPadding="true"
    app:contentPadding="8dp">

    <RelativeLayout
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/Iv_img_perfil"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_perfil"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
        <!--Nombre-->
        <TextView
            android:id="@+id/Tv_nombre_c"
            android:text="@string/Tv_nombre_c"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/Iv_img_perfil"
            android:textSize="17sp"
            android:fontFamily="@font/montserrat_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <!--Fecha-->
        <TextView
            android:id="@+id/Tv_fecha_c"
            android:text="@string/Tv_fecha_c"
            android:textSize="13sp"
            android:layout_alignParentEnd="true"
            android:fontFamily="@font/montserrat_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/Tv_comentario_c"
            android:text="@string/Tv_comentario_c"
            android:layout_marginStart="5dp"
            android:layout_below="@+id/Tv_nombre_c"
            android:layout_toEndOf="@+id/Iv_img_perfil"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/montserrat_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>